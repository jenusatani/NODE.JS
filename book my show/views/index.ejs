.card {
    position: relative;
    width: 250px;
    border-radius: 8px;
    background-color: #fff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    flex-shrink: 0;
    transition: transform 0.3s ease;
}

.card:hover {
    transform: scale(1.05);
}

.card-actions {
    position: absolute;
    top: 92%;
    left: 30%;
    transform: translate(-50%, -50%);
    display: flex;
    gap: 10px;
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
}

.card-actions1 {
    position: absolute;
    top: 92%;
    left: 70%;
    transform: translate(-50%, -50%);
    display: flex;
    gap: 10px;
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
}

.card:hover .card-actions {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
    pointer-events: auto;
    animation: bounce-in 0.5s ease-out;
}

.card:hover .card-actions1 {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
    pointer-events: auto;
    animation: bounce-in 0.5s ease-out;
}

.card-actions a {
    text-decoration: none;
